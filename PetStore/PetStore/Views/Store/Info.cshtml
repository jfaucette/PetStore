@model PetStore.Models.Animal

@{
    ViewBag.Title = "Info";
}

<h2> @Model.Name Information</h2>
<hr />
<div class="container">
    <div class="col-lg-3">
        <img src="@Model.PicturePath" class="detailImage img-responsive" />
        <center><p id="animalCost">@Model.Price.ToString()</p></center>
    </div>
    <div class="col-lg-9">
        <p>@Model.ShortDescription</p>
        <p>@Model.MainDescription</p>
    </div>
</div>

